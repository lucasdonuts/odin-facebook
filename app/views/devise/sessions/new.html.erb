<section class="section">
  <div class="container">
    <div class="columns has-text-centered is-full-width">
      <div class="column">
        <p class="title is-5">Log In</p>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <div class="control">
              <%= f.email_field :email, placeholder: "Email Address" %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.password_field :password, placeholder: "Password" %>
            </div>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <div class="control">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            </div>
          <% end %>

          <div class="field">
            <div class="control">
              <%= f.submit "Log in", class: "button is-info" %>
              <%= link_to "Sign Up", new_user_registration_path, class: "button is-info is-inverted" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>