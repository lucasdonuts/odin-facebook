<section class="section pt-0">
  <div class="container">
    <div class="columns">
      <div class="column profile-banner">
        <div class="hero block has-background-info-light mb-0">
          <div class="hero-body is-flex is-horizontal-center">
            <figure class="image is-128x128">
              <img class="is-rounded" src="https://i.imgur.com/53WcVOv.jpg">
            </figure>
          </div>
          <p class="title has-text-centered"><%= link_to @user.full_name, user_path(@user) %></p>
        </div>
      </div>
    </div>
    <div class="columns friends-list is-multiline is-mobile is-centered">
      <% @user.friends.each do |friend| %>
        <div class="column is-half">
          <div class="card">
            <div class="card-content">
              <div class="media">
                <div class="media-left">
                  <figure class="image is-48x48">
                    <img src="https://i.imgur.com/53WcVOv.jpg">
                  </figure>
                </div>
                <div class="media-content">
                  <p class="title is-6"><%= link_to friend.full_name, user_path(friend) %></p>
                </div>
              </div>
              <% unless @user == current_user %>
                <div class="media-right">
                  <div class="media-content">
                    <%= link_to "Send Friend Request", friend_requests_path(recipient_id: friend.id), method: :post, class: "button is-info is-small" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

