<%= form_with(model: post) do |f| %>
  <% if post.errors.any? %>
    <div class="notification is-global-notification is-danger is-light" id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <div class="control">
      <%= f.text_area :body, autofocus: true, class: "textarea is-info has-fixed-size" %>
    </div>
  </div>

  <div class="field is-grouped is-grouped-centered">
    <div class="control">
      <%= f.submit class: "button is-info" %>
    </div>
    <div class="control">
      <%= link_to "Cancel", root_path, class: "button is-info is-light" %>
    </div>
  </div>

<% end %>
